<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Registration - Let's FLOCK</title>
    <link rel="stylesheet" href="/styles/registerstyles.css">
</head>
<body>
<div class="div">
    <div class="div-2">
        <div class="div-3"></div>
        <div class="div-4">Let's FLOCK</div>
    </div>
  
    <!-- Registration Form Section -->
    <div class="div-5">
        <div class="div-6">Join Let's FLOCK</div>
        <div class="div-7">Connect Over Shared Interests</div>

        <form action="/users/register" method="POST" class="registration-form">
            <!-- Username -->
            <div class="div-8">
                <input type="text" id="username" name="username" required placeholder="Enter your username">
            </div>

            <!-- Full Name -->
            <div class="div-9">
                <input type="text" id="fullName" name="fullName" required placeholder="Enter your full name">
            </div>

            <!-- Email -->
            <div class="div-10">
                <input type="email" id="email" name="email" required placeholder="Enter your email">
            </div>

            <!-- Password -->
            <div class="div-11">
                <input type="password" id="password" name="password" required placeholder="Create your password">
            </div>

            <!-- Gender Selection -->
            <div class="div-15">
                <button type="button" class="gender-btn" data-value="male">Male</button>
                <button type="button" class="gender-btn" data-value="female">Female</button>
                <button type="button" class="gender-btn" data-value="other">Other</button>
                <input type="hidden" id="gender" name="gender" required>
            </div>

            <!-- Over 18 and Geo-Location -->
            <div class="div-27">
               <input type="checkbox" id="over18" name="over18" required> Over 18
                <input type="checkbox" id="geoLocation" name="geoLocation" required> Allow Geo-Location
            </div>

            <!-- Submit Button -->
            <div class="div-28">
                <button type="submit">Register</button>
            </div>
        </form>
    </div>

    <!-- Additional Content from index.html can go here -->
    <!-- ... -->

    <div class="div-29">
        <div class="div-30">About Us</div>
        <div class="div-31">Contact</div>
        <div class="div-32">Privacy Policy</div>
    </div>
</div>

<script>
  document.querySelectorAll('.gender-btn').forEach(button => {
      button.addEventListener('click', function() {
          document.querySelectorAll('.gender-btn').forEach(btn => btn.classList.remove('selected'));
          this.classList.add('selected');
          document.getElementById('gender').value = this.dataset.value;
      });
  });
</script>
</body>
</html>
