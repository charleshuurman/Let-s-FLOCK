<!DOCTYPE html>
<html>
<head>
        <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New User</title>
    <link rel="stylesheet" href="/styles/profilestyles.css">
    <script src="script.js"></script>
</head>
<body>
{{> header}}

<div class="div">
    <!-- Header Section -->
    <div class="div-2">
       
        <div class="div-3">
              <img src="/images/logo.png">
            <!-- Logo or icon -->
        </div>
        <div class="div-4">Let's FLOCK</div>
        <div class="div-5">
            <!-- User profile or logout link -->
        </div>
    </div>

    <!-- Main Content Area -->
    <div class="div-6">
        <div class="div-7">
            <div class="div-8">
                  <img src="/images/avatar1.png">
            </div>
            <div class="div-9">
                <h1 class="div-10">User Profile</h1>
                <form action="/users/update/{{user.id}}" method="post" class="div-20">
                    <label for="username" class="div-24">Username:</label>
                    <input type="text" id="username" name="username" value="{{user.username}}" class="div-47">

                    <label for="fullName" class="div-24">Full Name:</label>
                    <input type="text" id="fullName" name="fullName" value="{{user.fullName}}" class="div-47">

                    <label for="email" class="div-24">Email:</label>
                    <input type="email" id="email" name="email" value="{{user.email}}" class="div-47">

                    <label for="gender" class="div-24">Gender:</label>
                    <select id="gender" name="gender" class="div-47">
                        <option value="Male" {{#if (eq user.gender "Male")}}selected{{/if}}>Male</option>
                        <option value="Female" {{#if (eq user.gender "Female")}}selected{{/if}}>Female</option>
                        <option value="Other" {{#if (eq user.gender "Other")}}selected{{/if}}>Other</option>
                    </select>

                    <label for="age" class="div-24">Age:</label>
                    <input type="number" id="age" name="age" value="{{user.age}}" class="div-47">

                    <label for="geoLocation" class="div-24">Geo-Location:</label>
                    <input type="checkbox" id="geoLocation" name="geoLocation" {{#if user.geoLocation}}checked{{/if}} class="div-49">

                    <input type="submit" value="Update Profile" class="div-50">
                </form>
            </div>
        </div>
    </div>
</div>

{{> footer}}

