<div class="headline">
    <img src="{{photo_url}}" alt="{{title}}" width="250">
    <h3><a href="{{link}}">{{title}}</a></h3>
    <p>Published: {{published_datetime_utc}}</p>

    <!-- Additional details from the headline schema -->
    <div class="headline-details">
        <a href="{{source_url}}" target="_blank">
            <img src="{{source_logo_url}}" alt="Source Logo" class="source-logo">
        </a>
        <p>Read more at <a href="{{source_url}}" target="_blank">{{source_url}}</a></p>
    </div>

    <!-- User interactions -->
    <div class="user-interactions">
        <button class="select-headline-btn">Select Headline</button>
        <span class="selected-timeslots">
            {{#each selected_timeslots}}
                <span class="timeslot">{{this}}</span>
            {{/each}}
        </span>
    </div>
</div>
